{
  "name": "react_webpack_ssr",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "//start-csr-dev": "NODE_ENV=development node server/index.js",
    "//dev": "npm run dev-server & npm run start-csr-dev",
    "start-csr-dev": "better-npm-run start-csr-dev",
    "dev-server": "webpack-dev-server --config config/webpack.dev.js",
    "dev": "npm-run-all --parallel dev-server start-csr-dev",
    "clean": "rimraf ./public/build",
    "//comment": "prebuild จะทำงานอัตโนมตัิเมื่อมีการสั่ง npm run build",
    "prebuild": "npm run clean",
    "build": "npm-run-all build-client build-server",
    "build-client": "better-npm-run build-client",
    "build-server": "better-npm-run build-server",
    "start": "better-npm-run start-csr-prod",
    "start-ssr": "better-npm-run start-ssr-prod"
  },
  "betterScripts": {
    "start-csr-dev": {
      "command": "node ./server/index.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start-csr-prod": {
      "command": "node ./server/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-ssr-prod": {
      "command": "node ./server/index.js",
      "env": {
        "NODE_ENV": "production",
        "SSR": 1
      }
    },
    "build-client": {
      "command": "webpack --config config/webpack.prod.js --progress",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build-server": {
      "command": "webpack --config config/webpack.server.js --progress",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "better-npm-run": "^0.1.0",
    "express": "^4.16.2",
    "isomorphic-fetch": "^2.2.1",
    "npm-run-all": "^4.1.1",
    "object-assign": "^4.1.1",
    "promise": "^8.0.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router": "^3.2.0",
    "redux": "^3.7.2",
    "serve-favicon": "^2.4.5"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-pure-class-to-function": "^1.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.5",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.8",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-node-externals": "^1.6.0"
  }
}
